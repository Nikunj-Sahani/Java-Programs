        >> 𝙞𝙢𝙥𝙤𝙧𝙩 𝙟𝙖𝙫𝙖.𝙪𝙩𝙞𝙡.𝙎𝙘𝙖𝙣𝙣𝙚𝙧;

   :: Creating a Scanner Object
        >> 𝙎𝙘𝙖𝙣𝙣𝙚𝙧 𝙨𝙘𝙖𝙣𝙣𝙚𝙧 = 𝙣𝙚𝙬 𝙎𝙘𝙖𝙣𝙣𝙚𝙧(𝙎𝙮𝙨𝙩𝙚𝙢.𝙞𝙣);

   :: 𝑹𝒆𝒂𝒅𝒊𝒏𝒈 𝑰𝒏𝒑𝒖𝒕
        >> Below are examples of how to read different types of input:
    𝙲𝚘𝚍𝚎 -->>
        Scanner sc = new Scanner(System.in);
        int x = sc.nextInt();      //input = 10
        int y = sc.nextInt();      //input = 5
        float a = sc.nextFloat();  //1.5
        String z = sc.next();      //Hello

