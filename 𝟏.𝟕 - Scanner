ğ‘±ğ’‚ğ’—ğ’‚ ğ‘ªğ’ğ’…ğ’†  -->> Compiling the all data types to better understand.
  \/ Begins-- 
import java.util.Scanner;   //import this line always for scanner.

class Main 
{
    public static void main(String[] args) 
    {
        Scanner sc = new Scanner(System.in);
        
        byte b = sc.nextByte();        //input = 5
        short s = sc.nextShort();      //input = 10
        int i = sc.nextInt();          //input = 50
        long l = sc.nextLong();        //input = 400
        float f = sc.nextFloat();      //input = 6.8
        double d = sc.nextDouble();    //input = 93.5 
        
        String S = sc.next();          //input = Hello
        char c = sc.next().charAt(4);  //input = Nikunj
        Boolean B = sc.nextBoolean();  //input = true

        System.out.println("Byte Value = " + b);      //output - 5
        System.out.println("Short Value = " + s);     //output - 10
        System.out.println("Int Value = " + i);       //output - 50
        System.out.println("Long Value = " + l);      //output - 400
        System.out.println("Float Value = " + f);     //output - 6.8
        System.out.println("Double Value = " + d);    //output - 93.5
        System.out.println("String Value = " + S);    //output - Hello
        System.out.println("Char Value = " + c);      //output - n
        System.out.println("Boolean Value = " + B);   //output - true
    }
}

   |::| Run this code in Java compiler and check how it worked.

